{% extends "CGSocialBundle::layout.html.twig" %}

{% block body %}

    <form action="{{ path('login_check') }}" method="post" class="well col-lg-12">
        <fieldset>
            <div class="row">
                <div class="form-group">
                    <label class="col-md-2" for="username">Login :</label>
                    <div class="col-md-10">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required=""/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label class="col-md-2"  for="password">Mot de passe :</label>
                    <div class="col-md-10">
                        <input  type="password" id="password" name="_password" required=""/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="pull-right btn btn-default" type="submit" value="Connexion" />Valider <span class="glyphicon glyphicon-ok-sign"></span></button>
            </div>
        </fieldset>
    </form>

{% endblock %}